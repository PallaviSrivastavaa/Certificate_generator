<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="certificate_mail_template" model="mail.template">
    <field name ="name">Event: Certificate</field>
      <field name="model_id" ref="od_event.model_event_event" />
            <field name="subject">certificate</field>
            <field name="email_from">{{ (object.event_id.organizer_id.email_formatted or object.event_id.user_id.email_formatted or '') }}</field>
            <field name="email_to">{{ (object.partner_id.email_formatted or object.email) }}</field>
            <field name="description">Sent to participant </field>
    <field name="body_html" type="html">
  
    <div>
        Dear <t t-out="object.name or ''">Oscar Morgan</t>,<br/>
        Thank you for your participation.
        Here is your certificate for the event  <t t-out="object.name or ''"></t>.<br/>
        If you have any questions, please let us know.
        <br/><br/>
        Thank you,
        <t t-if="object.event_id.user_id.signature">
            <br />
            <t t-out="object.event_id.user_id.signature or ''">--<br/>Mitchell Admin</t>
        </t>
    </div>



</field>

    </record>
    </odoo>