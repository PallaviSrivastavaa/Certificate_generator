<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="send_mail_view_form">
            <field name="name">event.send.mail.view.form</field>
            <field name="model">event.send.mail</field>
            <field name="arch" type="xml">
                <form string="Compose Email" class="o_mail_composer_form">
                    <group col="1">
                        <group col="2">
                            <field name="event_id" readonly="context.get('default_event_id')"/>
            
                           <field name="partner_id"
                                widget="many2many_tags_email"
                                placeholder="Add existing contacts..."
                                context="{'force_email':True, 'show_email':True, 'no_create_edit': True}"/> 
                          <field name="emails"
                                
                                placeholder="Add a list of email recipients (separated by commas, semicolons or line breaks). They will not be converted into contacts."/>
                        </group>
                    <group col="3">
                               <!-- <field name="template_id" label="Use template"/>-->
                           
                        </group>
                    </group>
                    <footer>
           <!--             <button string="Send" name="action_send" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>-->
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>