<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inheriting the event form view -->
        <record id="view_event_inherited" model="ir.ui.view">
            <field name="name">event.event.inherited</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form" />
            <field name="arch" type="xml">
                <!-- Adding a new button to the form view -->
                <header>
                   <button string="share certificate" class="oe_highlight" type="object" name="action_test" />
                </header>
            <group name="right_event_details">
            <field name="background_image" widget="image" options="{'no_create': True, 'no_open': True, 'size': [250, 250]}" context="{'default_res_model': 'event.event', 'default_res_id': active_id}" label="certificate template"/>
            <field name="x_coordinate" colspan="2" />
            <field name="y_coordinate" colspan="2" />
            <!--<field name="font_family"/>-->
            </group>
            </field>
        </record>
    </data>
</odoo>

